<div id="queryCompleteOpen" data-request-url='@Url.Content("~/Content/DataTables/images/nested_complete.png")'></div>
<div id="queryCompleteClose" data-request-url='@Url.Content("~/Content/DataTables/images/nested_complete_close.png")'></div>
<div id="queryInProgressOpen" data-request-url='@Url.Content("~/Content/DataTables/images/nested_In_progress.png")'></div>
<div id="queryInProgressClose" data-request-url='@Url.Content("~/Content/DataTables/images/nested_In_progress_close.png")'></div>
<div id="queryFoundOpen" data-request-url='@Url.Content("~/Content/DataTables/images/nested_found.png")'></div>
<div id="queryFoundClose" data-request-url='@Url.Content("~/Content/DataTables/images/nested_found_close.png")'></div>
<div id="queryNotProcOpen" data-request-url='@Url.Content("~/Content/DataTables/images/nested_Not_processed.png")'></div>
<div id="queryNotProcClose" data-request-url='@Url.Content("~/Content/DataTables/images/nested_Not_processed_close.png")'></div>